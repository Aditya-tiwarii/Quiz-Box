<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/quizbg"
    android:layout_height="match_parent"
    tools:context=".scoreCardActivity">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:onClick="exit"
            android:src="@drawable/ic_back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/scback"
        android:onClick="mainmenu"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_45ssp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#FF6200EE"
        android:layout_gravity="center_horizontal"
        android:text="SCORE CARD"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_height="wrap_content">


        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            app:cpb_background_progressbar_color="#E91E63"
            app:cpb_background_progressbar_width="@dimen/_10sdp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="#4CAF50"
            app:cpb_progressbar_width="@dimen/_10sdp"
            app:cpb_progress_max="10"
            app:cpb_round_border="false" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_35ssp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#43069A"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/message"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#FF6200EE"
        android:layout_gravity="center_horizontal" />

</LinearLayout>